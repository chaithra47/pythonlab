my_list = [1, 3, 5, 2, 4]   
def operations():
     # 1.add an item
     my_list.append(6)
     print("after adding:", my_list)

     # 2.sort the list
     my_list.sort()
     print("after sorting:", my_list)

     # 3. reverse the list
     my_list.reverse()
     print("after reversing:", my_list)

     # 4.remove an item
     my_list.remove(3)
     print("after removing 3:", my_list)

operations()
                    
      